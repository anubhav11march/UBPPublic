<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="57"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/teaming_card"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferred Age Group"
                android:textColor="@color/onboarding_button_blue"
                android:textSize="@dimen/sixteen_sp"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/age_group_seek"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rsb_mode="range"
                app:rsb_orientation="left"
                app:rsb_tick_mark_orientation="horizontal"
                app:rsb_indicator_text_orientation="horizontal"
                app:rsb_min="13"
                app:rsb_max="99"
                app:rsb_min_interval="1"
                app:rsb_steps="86"
                app:rsb_gravity="center"
                app:rsb_progress_height="5dp"
                app:rsb_indicator_show_mode="alwaysShow"
                app:rsb_indicator_background_color="#D8D8D8"
                app:rsb_progress_color="@color/onboarding_button_blue"
                app:rsb_indicator_height="10dp"
                app:rsb_indicator_width="10dp"
                app:rsb_indicator_text_size="@dimen/ten_sp"
                app:rsb_indicator_text_color="@color/onboarding_button_blue"
                app:rsb_thumb_drawable="@drawable/thumb"
                app:rsb_tick_mark_number="50"
                app:rsb_tick_mark_mode="number"
                app:rsb_tick_mark_text_color="@color/unselected_sport"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maximum Distance (in kms)"
                android:textColor="@color/onboarding_button_blue"
                android:textSize="@dimen/sixteen_sp"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/distance_seek"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rsb_mode="single"
                app:rsb_orientation="left"
                app:rsb_tick_mark_orientation="horizontal"
                app:rsb_indicator_text_orientation="horizontal"
                app:rsb_min="0"
                app:rsb_max="50"
                app:rsb_min_interval="1"
                app:rsb_gravity="center"
                app:rsb_progress_height="5dp"
                app:rsb_indicator_show_mode="alwaysShow"
                app:rsb_indicator_background_color="#D8D8D8"
                app:rsb_progress_color="@color/onboarding_button_blue"
                app:rsb_indicator_height="10dp"
                app:rsb_indicator_width="10dp"
                app:rsb_indicator_text_size="@dimen/ten_sp"
                app:rsb_indicator_text_color="@color/onboarding_button_blue"
                app:rsb_thumb_drawable="@drawable/thumb"
                app:rsb_tick_mark_number="50"
                app:rsb_tick_mark_mode="number"
                app:rsb_tick_mark_text_color="@color/unselected_sport"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maximum Bet (in Rupees)"
                android:textColor="@color/onboarding_button_blue"
                android:textSize="@dimen/sixteen_sp"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/bet_seek"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rsb_mode="single"
                app:rsb_orientation="left"
                app:rsb_tick_mark_orientation="horizontal"
                app:rsb_indicator_text_orientation="horizontal"
                app:rsb_min="0"
                app:rsb_max="50000"
                app:rsb_steps="500"
                app:rsb_min_interval="100"
                app:rsb_gravity="center"
                app:rsb_progress_height="5dp"
                app:rsb_indicator_show_mode="alwaysShow"
                app:rsb_indicator_background_color="#D8D8D8"
                app:rsb_progress_color="@color/onboarding_button_blue"
                app:rsb_indicator_height="10dp"
                app:rsb_indicator_width="10dp"
                app:rsb_indicator_text_size="@dimen/ten_sp"
                app:rsb_indicator_text_color="@color/onboarding_button_blue"
                app:rsb_thumb_drawable="@drawable/thumb"
                app:rsb_tick_mark_number="50"
                app:rsb_tick_mark_mode="number"
                app:rsb_tick_mark_text_color="@color/unselected_sport"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>