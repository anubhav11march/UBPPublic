<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTeamActivity"
    android:orientation="vertical"
    android:weightSum="108">

    <include layout="@layout/view_create_team_load"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="@font/roboto_medium"
            android:text="Create Team"
            android:textColor="@color/onboarding_button_blue"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/team_photo"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/add_pic"/>
    </LinearLayout>
        <TextView
            android:id="@+id/add_team_photo"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:text="Add Team Photo"
            android:textColor="@color/onboarding_button_blue"
            android:textAlignment="center"/>


    <LinearLayout
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="57"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <View
            android:id="@+id/p1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/current_page"
            android:layout_marginRight="5dp"/>
        <View
            android:id="@+id/p2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/not_current_page"
            android:layout_marginRight="5dp"/>
        <View
            android:id="@+id/p3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/not_current_page"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:background="@drawable/next_button_blue"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/next_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Next"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>