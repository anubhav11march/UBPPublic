<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DecisionActivity"
    android:orientation="vertical"
    android:weightSum="108">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="11"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hi_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twenty_two_sp"
            android:textColor="@color/onboarding_blue"
            android:text="Hi."
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sixteen_sp"
            android:textColor="@color/onboarding_blue"
            android:text="@string/onboard_get_started"
            android:fontFamily="@font/roboto"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="41"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/teaming_card"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/join_team_button"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:background="@drawable/blue_selected_button"
                android:gravity="center"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:elevation="4dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join a Team"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twenty_five_sp"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteen_sp"
                android:textAlignment="center"
                android:textColor="@color/onboarding_blue"
                android:text="Join existing teams using a team code"
                android:fontFamily="@font/roboto"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="84dp"
                    android:layout_height="1dp"
                    android:background="@color/onboarding_button_blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:textColor="@color/onboarding_button_blue"
                    android:textSize="@dimen/sixteen_sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"/>

                <View
                    android:layout_width="84dp"
                    android:layout_height="1dp"
                    android:background="@color/onboarding_button_blue"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteen_sp"
                android:textColor="@color/onboarding_blue"
                android:text="Browse teams around you"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="41"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/teaming_card"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/create_team_button"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:background="@drawable/blue_selected_button"
                android:gravity="center"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:elevation="4dp">
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create a Team"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twenty_five_sp"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteen_sp"
                android:textAlignment="center"
                android:textColor="@color/onboarding_blue"
                android:text="Create a new team, invite friends and players"
                android:fontFamily="@font/roboto"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="84dp"
                    android:layout_height="1dp"
                    android:background="@color/onboarding_button_blue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AND"
                    android:textColor="@color/onboarding_button_blue"
                    android:textSize="@dimen/sixteen_sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"/>

                <View
                    android:layout_width="84dp"
                    android:layout_height="1dp"
                    android:background="@color/onboarding_button_blue"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteen_sp"
                android:textColor="@color/onboarding_blue"
                android:text="Start Challenging!"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"/>

</LinearLayout>