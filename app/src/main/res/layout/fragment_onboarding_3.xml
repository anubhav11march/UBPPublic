<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="88">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/onboarding_blue"
            android:text="Hi Tim."
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/onboarding_blue"
            android:text="@string/onboard_more_details"
            android:fontFamily="@font/roboto"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="33dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Age"
            android:autoSizeTextType="uniform"
            android:textColor="@color/onboarding_button_blue"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginHorizontal="33dp"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:background="@drawable/white_selectable_button"
            android:paddingHorizontal="20dp"
            android:text="16"
            android:inputType="number"
            android:textColor="@color/onboarding_button_blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginHorizontal="33dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Gender"
            android:autoSizeTextType="uniform"
            android:textColor="@color/onboarding_button_blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="33dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/blue_selected_button"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Male"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/white_selectable_button">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:text="Female"
                android:gravity="center"
                android:textColor="@color/onboarding_button_blue"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginHorizontal="33dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Preferred Age Group"
            android:autoSizeTextType="uniform"
            android:textColor="@color/onboarding_button_blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="33dp">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/white_selectable_button">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10-15"
                android:gravity="center"
                android:textColor="@color/onboarding_button_blue"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/blue_selected_button">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="15-20"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/white_selectable_button">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="20-30"
                android:gravity="center"
                android:textColor="@color/onboarding_button_blue"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="33dp">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/white_selectable_button">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="30-40"
                android:gravity="center"
                android:textColor="@color/onboarding_button_blue"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/white_selectable_button">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="40-50"
                android:gravity="center"
                android:textColor="@color/onboarding_button_blue"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/white_selectable_button">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="50+"
                android:textColor="@color/onboarding_button_blue"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginHorizontal="33dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Maximum Distance"
            android:autoSizeTextType="uniform"
            android:textColor="@color/onboarding_button_blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:progressDrawable="@drawable/onboard_progress"
        android:progress="50"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/onboarding_blue"
            android:text="3/3"
            android:fontFamily="@font/roboto_medium"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/onboard_progress" />

    </LinearLayout>

</LinearLayout>