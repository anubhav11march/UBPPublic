<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="61"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/teaming_card"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:gravity="center_vertical"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brief Team Bio"
                android:textColor="@color/onboarding_button_blue"
                android:textSize="@dimen/sixteen_sp"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="28"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp">
            <EditText
                android:id="@+id/team_bio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|left"
                android:hint="Team Bio"
                android:padding="10dp"
                android:textColor="@color/onboarding_button_blue"
                android:textSize="@dimen/sixteen_sp"
                android:fontFamily="@font/roboto"
                android:background="@drawable/input_box_white"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:gravity="top|end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max 30 words"
                android:textColor="@color/onboarding_button_blue"
                android:textSize="@dimen/twelve_sp"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>
        




    </LinearLayout>

</LinearLayout>